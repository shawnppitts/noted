<div class="signup">
    <h2 id="sign-up">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <%= f.text_field :email, required: true, autofocus: true, class: "fields", placeholder: "Email" %>
            <br><br>
        <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "fields", placeholder: "Password" %>
            <br><br>
        <%= f.text_field :password_confirmation, required: true, class: "fields", placeholder: "Re-Enter Password" %>
            <br><br>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "ghost-button" %>
      </div>
    <% end %>

</div>
