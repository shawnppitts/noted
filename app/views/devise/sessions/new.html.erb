
<div class="login-wrapper">
    <h2 id="login">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :email , required: false, autofocus: true, class: "fields", placeholder: "Email" %>
            <br><br>
        <%= f.text_field :password , required: false, class: "fields", placeholder: "Password" %>
            <br><br>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <br><br><br>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "ghost-button" %>
      </div>
    <% end %>

    <div class="links">
        <%= render "devise/shared/links", class:"login-links" %>
    </div>
</div>
